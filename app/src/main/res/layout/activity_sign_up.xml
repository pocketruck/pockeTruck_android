<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pocketruck.penny.pocketruck_android.SignUpActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="330dp">

        <EditText
            android:id="@+id/suEmail"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/warningEmial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이메일 형식을 맞춰주세요!"
            android:textColor="@color/warning"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/suPassWd"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/warningPw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="영/숫자 혼합 6~20자리"
            android:textColor="@color/warning"
            android:visibility="invisible"/>

        <EditText
            android:id="@+id/suPassWdChk"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="password correct"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/warningPwChk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호가 같지 않습니다!"
            android:textColor="@color/warning"
            android:visibility="invisible"/>

        <CheckBox
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개인정보 이용 약관에 동의합니다." />
    </LinearLayout>

    <Button
        android:id="@+id/signupBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="380dp"
        android:text="회원가입"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/logIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="144dp"
        android:gravity="center"
        android:text="Do you have already account?\nLogin"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>